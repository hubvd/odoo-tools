#!/bin/fish

worktree repository &>/dev/null || exit 1

argparse 'v/version' 'f/fetch' -- $argv

if set -q _flag_version
  set remote origin
  set branch (worktree base) || exit 1
else 
  set input (set -q argv[1] && echo $argv[1] || clip)
  set values (string split : $input)

  switch (count $values)
    case 1
      set remote origin
      set branch $values[1]
    case 2
      set remote $values[1]
      set branch $values[2]
      test $remote = 'odoo-dev' && set remote 'dev'
    case '*'
      exit 2
  end
end

if not git rev-parse --quiet --verify $remote/$branch >/dev/null
  git fetch $remote $branch || exit 1
end
set -q _flag_fetch || git checkout $branch
